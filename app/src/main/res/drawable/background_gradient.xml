<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Lớp 1: Gradient chính -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#F5F5DC"
                android:centerColor="#FFD7BA"
                android:endColor="#483D8B" />
        </shape>
    </item>

    <!-- Lớp 2: Một lớp sáng nhẹ ở góc -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="400"
                android:centerX="0.3"
                android:centerY="0.2"
                android:startColor="#FFFFE0"
                android:endColor="@android:color/transparent"/>
        </shape>
    </item>

    <!-- Lớp 3: Một lớp tím nhạt ở góc dưới -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="600"
                android:centerX="0.7"
                android:centerY="0.8"
                android:startColor="#9370DB"
                android:endColor="@android:color/transparent"/>
        </shape>
    </item>

</layer-list>
